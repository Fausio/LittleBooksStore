@model LittleBooksStore.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Index";
}

@Html.Partial("_Carousel", Model.Carousels)

<br />
<h2 class="text text-center">Books' List</h2>
<br />

<div class="container marketing">
    <div class="row">
        @foreach (var item in Model.Books)
        {
            <div class="col-lg-4 col-md-4 col-sm-4 col-xl-4">
                <img class="rounded figure-img" src="~/images/@item.image" alt="@item.Title" width="140" />
                <h5>@item.Title</h5>
                <p><a class="btn btn-secondary" href="/Home/Details/@item.Id" role="button"> View details</a></p>
            </div>
        }
    </div>
</div>