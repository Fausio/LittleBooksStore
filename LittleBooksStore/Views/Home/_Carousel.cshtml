@model IEnumerable<LittleBooksStore.Models.Carousel>

@{
    var count = 0;
}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner bg-secondary">
        @foreach (var item in Model)
        {


        <div class="carousel-item @(count==0? "active" : "") ">
            @switch (count++)
            {
                case 0:
                    <img class="first-slide" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"   alt="first-slide">
                    break;

                case 1:
                    <img class="first-slide" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" alt="first-slide">
                    break;

                case 2:
                    <img class="first-slide" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" alt="first-slide">
                    break;

            }
              


            <div class="container  ">
                <div class="row" style="padding-top:25px; padding-bottom:25px;">
                    <div class="col-md-4 col-lg-4 col-xl-4 col-sm-4">
                        <img src="~/images/@item.ImageURL"  class="img-fluid" alt="Responsive image" width="400" />
                    </div>
                    <div class="col-md-8 col-lg-8 col-xl-8 col-sm-8">
                        <div class="carousel-caption   align-text-top">
                            <h1>@item.Title.</h1>
                            <p>@item.Description ...</p>
                            <p><a class="btn btn-primary" href="/Home/Details/@item.Id" role="button"> Read More </a></p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        }
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>

</div>
